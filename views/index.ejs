<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Url shortener</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>

<body>
    <div class="container">
        <h1>Url shortener</h1>


        <form action="/shortUrls" method="post" class="my-4 form-inline">
            <label for="fullUrl" class="visually-hidden-focusable">Url</label>
            <input type="url" name="fullUrl" id="fullUrl" placeholder="Url" required class="form-control col mr-2">

            <button class="btn btn-success" type="submit">shortener</button>
        </form>

        <table class="table table-stripe table-rsponsive">
            <thead>
                <tr>
                    <th>Full Url</th>
                    <th>Short Url</th>
                    <th>Clicks</th>
                </tr>
            </thead>

            <body>
                <% shortUrls.forEach(shortUrl =>{%>
                <tr>
                    <td><a href="<%= shortUrl.full%>"><%= shortUrl.full%></a></td>

                    <td><a href=" <%=shortUrl.short%>"><%=shortUrl.short%></a></td>

                    <td><%= shortUrl.clicks%></td>
                </tr>
                <%})%>
            </body>
        </table>
    </div>
</body>

</html>